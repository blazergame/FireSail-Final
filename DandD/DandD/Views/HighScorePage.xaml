<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DandD.Views.HighScorePage">

    <ContentPage.Content>
        <StackLayout>
        <ListView x:Name="HighScoreView" HorizontalOptions="FillAndExpand">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding Name}" Detail="{Binding concatHighScore}" />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>