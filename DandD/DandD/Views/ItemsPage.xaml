<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DandD.Views.ItemsPage">



    <StackLayout>
        <Button x:Name="listButton" Text="Get List 1" />
        <Button x:Name="listButton2" Text="Get List 2" />
        <Button x:Name="listButton3" Text="Get List 3" />
        <Button x:Name="reset" Text="Reset" />


        <ListView x:Name="ApiListView" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding concat}" />


                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackLayout>


</ContentPage>